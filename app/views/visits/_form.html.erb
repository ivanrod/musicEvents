<%= form_for [@user,@visit] do |f| %>
<%= f.hidden_field :user_id, :value => @user.id %>
<%= f.label :location_id %>
<%= f.select(:location_id, @locations.showAll) %>
<%= f.label :from_date %>
<%= f.datetime_select(:from_date, default: Time.now + 1.days ) %>
<%= f.label :to_date %>
<%= f.datetime_select(:to_date, default: Time.now + 1.days ) %>
<br/>
<%= f.submit "New visit" %>
<% end %>

<%= link_to("Cancel", user_visits_path(params[:user_id])) %>